<div class="container">
  <div class="row">
    <div class="col-md-2">
     
    </div>
    <div class='col-md-5 mt-5 ml-5'>
      <%= image_tag @item.get_image(200,200), class: "shadow p-3 mb-5 bg-white", style: "margin: auto;" %>
    </div>

    <div class= "col-md-4 mt-5">
      <div class = "item_cd" style = "background-color: #003366;">
        <p><strong style = "color: #ffffff;"><%= @item.name %></strong></p></br>
        <p style = "color: #ffffff;"><%= @item.description %></p>
        <p style = "color: #ffffff;">¥<%= @item.tax_price.to_s(:delimited)%>（税込)</p>
      </div>


      <% if customer_signed_in? && @item.is_selled == "sale" %>
        <%= form_with model: @cart_item do |f| %>
        <%= f.hidden_field :customer_id, :value => current_customer.id %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <p class = "pt-3">
        <%= f.submit "カートに入れる"%>
        <%= f.select :amount, *[1..10] %>
        </p>
        <% end %>
      <% else %>
        <% if @item.is_selled == "sale" %>
          <p style = "color: #ffffff;">販売中</p>
        <% else %>
          <p style = "color: #ff3838;">売切れ</p>
        <% end %>
      <% end %>

    </div>
  </div>
</div>
