<div class="row d-flex">
  <% items.each do |item| %>
    <div class ="col-md-3 mb-3 text-center p-2">
            <div class="lineTrigger lineanime">
              <div class="line2">
                <div class="lineinappear">
                  <a href="/items/<%= item.id %>" class="card h-100 m-0"
                    style="background-color: #003366; text-decoration: none;">
                    <%= image_tag item.get_image(150,150), class: "item-image-card mt-1 mx-auto" %><br>
                    <div class ="card-body" style="background-color: #003366;">
                    <p style = "color: #ffffff;"><strong class = "gold card-title"><%= item.name %></strong></p>
                      <p style = "color: #ffffff;">¥<%= item.tax_price.to_s(:delimited) %></p>
                    </div>
                    <% if item.is_selled == "sale" %>
          <p style = "color: #ffffff;">販売中</p>
        <% else %>
          <p style = "color: #ff3838;">売切れ</p>
        <% end %>
                  </a>
                </div>
              </div>
            </div>
          </div>
  <% end %>
</div>