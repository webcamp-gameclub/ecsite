    <!--フラッシュ表示-->
  <%= flash[:notice] %>
  <%= flash[:alert] %>
  <h2>配送先編集</h2>


  <%= form_with model: @address do |f| %>
  <table>
  <tr>
    <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
    <td><%= f.text_field :pastal_code, placeholder: "0000000" %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= f.label :"住所" %></td>
    <td><%= f.text_field :address, size:58, placeholder: "⚪︎⚪︎県⚪︎⚪市⚪︎⚪︎1-2-3 ⚪︎⚪︎マンション123号" %></td>
    <td></td>
  </tr>
  <tr>
    <td><%= f.label :"宛名" %></td>
    <td><%= f.text_field :name, placeholder: "山田太郎" %></td>
    <td><%= f.submit "変更内容を保存", class:"btn-success" %></td>
  </tr>
  </table>
  <% end %>