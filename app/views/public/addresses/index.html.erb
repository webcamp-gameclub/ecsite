  <!--フラッシュ表示-->
  <%= flash[:notice] %>
  <%= flash[:alert] %>
<div class = "ml-5">
  <h5 class = "ml-5 my-4"><strong>配送先登録/一覧</strong></h5>
  <%= form_with model: @address do |f| %>
    <table>
    
    <tr>
      <td><%= f.label :"郵便番号（ハイフンなし）" %></td>
      <td><%= f.text_field :ships_post_number, placeholder: "0000000" %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :"住所" %></td>
      <td><%= f.text_field :ships_address, size:58, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
      <td></td>
    </tr>
    <tr>
      <td><%= f.label :"宛名" %></td>
      <td><%= f.text_field :ships_name, placeholder: "令和道子" %></td>
      <td><%= f.submit "新規登録", class:"btn-success" %></td>
    </tr>
    </table>
  <% end %>
</div>
<div class = "ml-4 mr-5 mt-5">
  <table class ="table table-bordered">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @addresses. each do |address| %>
    <tr>
      <td><%= address.pastal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集", edit_address_path(address.id), class:"btn-success" %>
        <%= link_to "削除", address_path(address.id), method: :delete , class:"btn-danger" %>
      </td>
    </tr>
    <% end %>
  </table>
</div>