<div class="container my-4">
  <div class="row">
    <div class="col-10 mx-auto">
      <h4><strong style="background-color:#EEEEEE;">会員情報編集</strong></h4>
      <%= form_with model: @customer, url: update_information_path do |f| %>
        <%= render 'public/shared/error_messages', resource: @customer %>
        <table class="customer_info customer_form">
          <thead>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <tr>
              <td>氏名</td>
              <td><%= f.label :last_name, "(姓)", class: "customer_name" %><%= f.text_field :last_name, :placeholder =>"#{@customer.last_name}" %></td>
              <td><%= f.label :first_name, "(名)", class: "customer_name" %><%= f.text_field :first_name, :placeholder =>"#{@customer.first_name}" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.label :last_name_kana, "(姓)", class: "customer_name" %><%= f.text_field :last_name_kana, :placeholder =>"#{@customer.last_name_kana}" %></td>
              <td><%= f.label :first_name_kana, "(名)", class: "customer_name" %><%= f.text_field :first_name_kana, :placeholder =>"#{@customer.first_name_kana}" %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td colspan="2"><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@customer.email}" %></td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし7桁)" %></td>
              <td colspan="2"><%= f.text_field :postal_code, :placeholder =>"#{@customer.postal_code}", class: "jpostal_code" %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所(郵便番号から自動入力)" %></td>
              <td colspan="2"><%= f.text_field :address, :placeholder =>"#{@customer.address}", class: "jpostal_code" %></td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "電話番号(ハイフンなし10or11桁)" %></td>
              <td colspan="2"><%= f.text_field :phone_number, :placeholder =>"#{@customer.phone_number}" %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.submit "編集内容を保存する", class: "btn btn-primary" %></td>
              <td><%= link_to "退会する", confirm_quit_path, class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>