<div class = "container my-4">
  <h4><strong style="background-color:#EEEEEE;">マイページ</strong></h4>
  <div class = "row">
    <strong><p class = "mr-5" >登録情報</p></strong>
    <div class="col"><%= link_to "編集", edit_information_path, class:"btn btn-success" %></div>
    <div class="col"><%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-success m12" %></div>
  </div>

  <div class = "row">
    <table class ="table table-bordered">
      <tr>
        <td>氏名</td>
        <td>
          <%= current_customer.last_name %>
          <%= current_customer.first_name %>
        </td>
      </tr>
      <tr>
        <td>カナ</td>
        <td>
          <%= current_customer.last_name_kana %>
          <%= current_customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= current_customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= current_customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= current_customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= current_customer.email %></td>
      </tr>
    </table>
  </div>

  <div class = "row">
    <strong><p class = "mr-5" >配送先</p></strong>
    <p class = "ml-3">
    <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
    </p>
  </div>
  <div class = "row">
    <strong><p class = "mr-5" >注文履歴</p></strong>
    <p class = "ml-１">
    <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
    </p>
  </div>

</div>