<div class="order-group">
  <div class="title pt-4 ml-5 col-3">
    <h3 class="text-center bg-light">注文履歴詳細</h3>
  </div>
  <div class="row pl-5">
    <table class="table table-borderless">
      <tr>
        <th class="col-3">購入者</th>
        <td class="col-9">
          <%= link_to admin_customer_path(customer.id) do %>
          <%=@order.customer_name %>
          <% end %>
        </td>
        <th class="col-3">注文日</th>
        <td cladd="col-9"><%= @order.create_at %></td>
        <th class="col-3">配送先</th>
        <td class="col-9"><%= @order.address1 %></td>
        <th class="col-3">支払方法</th>
        <td class="col-9"><%= @order.payment_method %></td>
        <th class="col-3">注文ステータス</th>
        <td class="col-9">
          <%= form_with model: @order, method: :patch do |f| %>
            <%= f.select :order_status, @order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_statuses.#{k}"), k]} %>
            <%= f.submit "更新", class: "btn btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>
    <% @order_items.each do |order_item| %>
      <%= form_with model: order_item, method: :patch do |f| %>
        <table class="table">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.tax_price %></td>
            <td><%= order_item.order_details.quantity %></td>
            <td><%= order_item.order_details.total_price %></td>
            <td><%= f.select :making_status, order_item.making_statuses.keys.map {|k| [I18n.t("enums.order_item.making_statuses.#{k}"), k]} %></td>
            <td><%= f.submit "更新", class: "btn btn-success" %></td>
          </tr>
        </table>
        
</div>