<div class="gener-group">
  <div class="title">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <%= form_with model: @new_genre, url: admin_genres_path do |f| %>
    <div class="row">
      <div class="form-group col-1">
        <%= f.label :ジャンル名 %>
      </div>
      <div class="form-group col-3">
        <%= f.text_field :name %>
      </div>
      <div class="form-group col-2">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
