<div class="gener-group ml-5">
  <div class="title pt-4 ml-5 col-2">
    <h4 class="text-center bg-light">ジャンル編集</h3>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="row pt-5">
      <div class="form-group col-1">
        <%= f.label :ジャンル名 %>
      </div>
      <div class="form-group col-2">
        <%= f.text_field :name %>
      </div>
      <div class="form-group col-2">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>