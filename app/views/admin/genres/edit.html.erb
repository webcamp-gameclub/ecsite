<div class="gener-group">
  <div class="title">
    <h3>ジャンル編集</h3>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="row">
      <div class="form-group col-1">
        <%= f.label :ジャンル名 %>
      </div>
      <div class="form-group col-3">
        <%= f.text_field :name %>
      </div>
      <div class="form-group col-2">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>