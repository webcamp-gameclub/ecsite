<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row mt-4">
    <div class="col-md-3">
      </div>
      </div>
  <h3 class="ml-5 mb-5"><span class="title-custom px-4">商品詳細</span></h3>
  <div class="row mt-5">
    <div class="col-md-4 mx-auto">
<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "300x300" %>
<% else %>
  <%= image_tag 'noimage.png', size: "300x300" %>
<% end %>

        </div>
      <div class="col-md-7">
     <table class="table table-striped">
        <tr>
          <th>商品名</th>
          <td><%= @item.name%></td></tr>
       <tr><th>商品説明</th>
       <td><%= @item.description %></td></tr>
       <tr> <th>ジャンル</th>
        <td><%= @item.genre.name %></td></tr> 
       <tr> <th>税抜き価格(税込価格)</th>
        <td>￥<%= p @item.price.to_s(:delimited) %>(<%= @item.tax_price %>)円</td></tr>
       <tr> <th>販売ステータス</th>
        <td><% if @item.is_selled == "sale" %>
          <p style = "color: #4ec51e;">販売中</p>
        <% else %>
          <p style = "color: #ff3838;">売切れ</p>
        <% end %></td></tr>

  </table>
  </div>
   </div>
    <div class="text-center mt-3">
   <%= link_to "編集", edit_admin_item_path(@item.id),class: "btn btn-info" %>
    </div>
    </div>

     </div>

