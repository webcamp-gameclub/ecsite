<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>商品新規登録</h1>
<!-- form_with部分 -->
<%= form_with model: @item, url: admin_items_path do |f| %>
<h4>商品画像</h4>
<%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :description %>
  <h4>ジャンル</h4>
	<%#=f.select :genre %>
	<h4>税抜き価格</h4>
	<%= f.text_field :price %>
	<h4>販売ステータス</h4>
	
  <%= f.submit '新規登録' %>
<% end %>
    </div>
        </div>
  </div>
</div>