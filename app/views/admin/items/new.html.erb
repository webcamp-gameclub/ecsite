
<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">

     <h5 class="ml-5 mb-5"><span class="title-custom px-4">新規商品登録</span></h5>
     <div class="col-8 mx-auto form-group">
    <table class="table table-borderless">
    <%= render 'layouts/errors', obj: @item %>
<!-- form_with部分 -->
<%#= form_with model: @item, url: admin_items_path do |f| %>
 <%= form_with model: [:admin, @item], url: admin_items_path do |f| %>
<tr><td>商品画像</td>
<td><%= f.file_field :image, accept: "image/*" %></td></tr>

<tr><td>商品名</td> 
 <td> <%= f.text_field :name, class: "form-control" %></td></tr>
 <tr> <td>商品説明</td>
 <td> <%= f.text_area :description, class: "form-control"%></td></tr>
 <tr><td>ジャンル</td>
<td>	<%#=f.select :genre %></td></tr>
<tr><td>税抜き価格</td>
<td>	<%= f.text_field :price, class: "form-control" %></td></tr>
<tr>	<td>販売ステータス</td></tr>
  <td><%= f.submit '新規登録' ,class:"btn btn-success" %></td>
  </table>
<% end %>
    </div>
        </div>
  </div>
</div>