<div class="row pl-5">
<div class="customer-group">
  <div class="title pt-4 ml-5">
    <h4><%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集</h4>
  </div>
  <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
  <table class="table table-borderless">
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :first_name, class: "form-control" %></td>
      <td><%= f.text_field :last_name, class: "form-control" %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
      <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code, class: "form-control" %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, class: "form-control" %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <th><%= f.text_field :phone_number, class: "form-control" %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email, class: "form-control" %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, false %>
        <%= f.label :有効 %>
        <%= f.radio_button :is_deleted, true %>
        <%= f.label :退会 %>
      </td>
    </tr>
  </table>
  <div class= col-5>
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
  <% end %>
</div>
</div>